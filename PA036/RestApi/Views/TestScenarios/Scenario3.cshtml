@using System.Web.Optimization
@model dynamic

@{
    ViewBag.Title = "ExampleScenario3";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<h2>ExampleScenario3</h2>
<div>
    <h4>Test Description:</h4>
    <p class="lead">Simple GET query and updating data:</p>
    <ol>
        <li> 2 <b>GET request</b> on 1000 products. </li>
        <li> Checking if data are cached. </li>
        <li> Get number of elements in cache. </li>
        <li> 30 different <b>PUT request</b> of these data. </li>
        <li> Get numberof element is cache. </li>
    </ol>

    <p>Blah, blah, blah.. some other shit...</p>


    <button id="execute" class="btn btn-info pull-right" data-url="@Url.RouteUrl("DefaultApi", new {controller = "Scenario3", httproute = true})">
        Run test
    </button>
</div>

<div id="container" class="container">
    <h2>Number of elements in Cache</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Before UPDATE</th>
                <th>After UPDATE</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="before"></td>
                <td id="after"></td>
            </tr>
        </tbody>
    </table>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/pages/testScenarios/scenario3.js")
}